<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <%= bookmark.comment %>
      <%= link_to "Remove", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>


    </li>
    <li><%= image_tag(bookmark.movie.poster_url)%></li>
  <% end %>
</ul>

<%= link_to "All lists", lists_path %>

<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
